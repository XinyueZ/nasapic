<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/common_black_trans</item>
        <item name="android:textColorPrimary">@color/common_white</item>
        <item name="android:textColorPrimaryInverse">@color/common_white</item>
        <item name="android:textColorSecondary">@color/common_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="dropDownListViewStyle">@style/OverflowDropDown</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base" />


    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/common_transparent</item>
        <item name="colorPrimaryDark">@color/common_transparent</item>
    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">@dimen/ab_elevation</item>
        <item name="elevation">@dimen/ab_elevation</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">@dimen/ab_elevation</item>
        <item name="elevation">@dimen/ab_elevation</item>
    </style>


    <style name="OverflowDropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="PhotoCardView">
        <item name="cardBackgroundColor">@color/common_black</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppBarOverlay</item>
        <item name="android:background">@color/common_black_trans</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="popupTheme">@style/PopupOverlay</item>
        <item name="elevation">@dimen/ab_elevation</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">true</item>
    </style>


    <style name="ICON" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:clickable">false</item>
        <item name="backgroundTint">@color/common_white</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/common_white</item>
    </style>


    <style name="FAB" parent="@style/ICON">
        <item name="android:layout_marginLeft">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="elevation">5dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
