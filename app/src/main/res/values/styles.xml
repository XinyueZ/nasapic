<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/common_black_trans</item>
        <item name="android:textColorPrimary">@color/common_white</item>
        <item name="android:textColorPrimaryInverse">@color/common_white</item>
        <item name="android:textColorSecondary">@color/common_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_white</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="dropDownListViewStyle">@style/OverflowDropDown</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/common_transparent</item>
        <item name="colorPrimaryDark">@color/common_transparent</item>
    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">10dp</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">10dp</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="OverflowDropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="PhotoCardView">
        <item name="cardBackgroundColor">@color/grey_500</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">0dp</item>
    </style>
</resources>
